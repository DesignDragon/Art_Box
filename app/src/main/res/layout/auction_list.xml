<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:id="@+id/auct_card"
    android:backgroundTint="@color/bar_color"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="@dimen/cardview_default_radius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/camera"
            android:id="@+id/auction_item_img">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="post description"
            android:id="@+id/auct_item_desc"
            android:textSize="25dp"
            android:textColor="@color/text_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/auction_item_img"
            android:layout_alignParentTop="true">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="PRICE"
            android:id="@+id/auct_item_price"
            android:layout_below="@id/auct_item_desc"
            android:textColor="@color/text_color"
            android:layout_toEndOf="@id/auction_item_img"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp">
        </TextView>
        <TextView
            android:id="@+id/txt"
            android:layout_below="@id/auct_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Left :"
            android:textColor="@color/text_color"
            android:textSize="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/auction_item_img"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"/>

        <TextView
            android:id="@+id/h_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auct_item_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/txt"
            android:layout_marginStart="-80dp"
            android:text="HH"
            android:textSize="30dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>